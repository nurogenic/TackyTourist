<!-- Team -->
{% setcontent record = 'blocks/team' %}
	{% if paths.current != '/pages/about-dan-miller' %}
			<div class="wrapper style5">
				<section id="team" class="container">
					<header class="major">
						<h2>{{ record.title }}</h2>
						<span class="byline">{{ record.blurb }}</span>
					</header>

					<div class="row">
						{{ record.content }}
					</div>
				</section>
			</div>
	{% endif %}